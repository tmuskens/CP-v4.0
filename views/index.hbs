<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <!-- STYLE 
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous"> -->
    <link rel="stylesheet" href="/assets/css/main.css">
    <link rel="stylesheet" href="/assets/bootstrap/css/bootstrap.css">
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.bundle.min.js"></script>

    <title>CP v4.0</title>
  </head>
  <body>
    <div class="vh-100 w-100 d-flex flex-column">
      <nav class="navbar navbar-expand-lg navbar-dark bg-secondary">
        <div class="container-fluid">
          <a class="navbar-brand" href="/index"><strong>KGSACU Command Post</strong></a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/index">Record Transmission</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/log">Log</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/notes">Notes</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/settings">Settings</a>
              </li>
          </div>
        </div>
      </nav>

      <div class="container-fluid flex-grow-1">
        <div class="row h-100">
          <div class="col-2 px-3 pt-3 bg-light h-100">
            <div class="d-grid gap-3">
              <button class="btn btn-primary disabled" aria-current="page">
                TRANSMISSIONS
              </button>
              {{#each transmissions}}
                {{#ifEquals 0 @index}}
                  <button class="btn btn-outline-secondary transmission-btn active" aria-current="page" value="{{transmission}}" onclick="selectTransmission('{{transmission}}')">
                {{/ifEquals}}
                {{#ifNotEquals 0 @index}}
                  <button class="btn btn-outline-secondary transmission-btn" aria-current="page" value="{{transmission}}" onclick="selectTransmission('{{transmission}}')">
                {{/ifNotEquals}}
                    {{transmission}}
                  </button>
              {{/each}}
            </div>
          </div>
          <div class="col-10 h-100 p-3">
            <iframe class="w-100 h-100 border" src="/transmission/{{defaultTransmission}}" id="transmissionIframe">
            </iframe>
          </div>
        </div>
      </div>
    </div>
    <div class="position-fixed top-0 end-0 p-3" style="z-index: 11">
      <div id="success-toast" class="toast" role="alert" data-bs-delay="2000">
        <div class="toast-header">
          <strong class="me-auto">Command Post</strong>
          <small>Just then</small>
          <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body">
          Hello, world! This is a toast message.
        </div>
      </div>
    </div>
    <script src="assets/bootstrap/js/bootstrap.js"></script>
    
    <script>
      function transmissionSuccess () {
        var toastElList = [].slice.call(document.querySelectorAll('.toast'))
        var toastList = toastElList.map(function(toastEl) {
          return new bootstrap.Toast(toastEl)
        })
        toastList.forEach(toast => toast.show()) 
      }
    </script>
    <script src="assets/js/main.js"></script>
  </body>
</html>
