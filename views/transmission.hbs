<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <!-- STYLE 
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous"> -->
    <link rel="stylesheet" href="/assets/css/main.css">
    <link rel="stylesheet" href="/assets/bootstrap/css/bootstrap.css">
    <link rel="stylesheet" href="/assets/css/transmission.css">
  </head>
  <body>
    <div class="container-fluid bg-primary px-2 pt-2 pb-1">
      <h5 class="text-light">Record Transmission</h5>
    </div>
    <div class="settings border py-1 px-2">
      <table class="row-gap">
          <tr>
            <td style="padding-right: 0.5rem">
              <button name="callsign" type="button" class="btn btn-outline-secondary btn-sm full-btn change-setting" data-bs-toggle="modal" data-bs-target="#modal-form">This Callsign</button>
            </td>
            <td class="callsign-text">{{callsign}}</td>
          </tr>
          <tr>
            <td style="padding-right: 0.5rem">
              <button name="duty-officer" id="change-duty-officer" type="button" class="btn btn-outline-secondary btn-sm full-btn change-setting">Duty Officer</button>
            </td>
            <td class="duty-officer-text">{{dutyOfficer}}</td>
          </tr>
          <tr>
            <td style="padding-right: 0.5rem">
              <button name="net" id="change-net" type="button" class="btn btn-outline-secondary btn-sm full-btn change-setting">This Net</button>
            </td>
            <td class="net-text">{{net}}</td>
          </tr>
        </table>
    </div>
    <div class="container-fluid h-100 px-3 pt-2">
      <form name="transmission" autocomplete="off" action="../record_transmission/{{transmission.transmission}}">
        <table class="row-gap column-gap-sm">
          <tr>
            <td style="width: 5rem;"><strong>To</strong></td>
            <td><input type="text" name="to" list="callsign-options" class="form-control form-control-sm"></td>
            <td style="width: 4rem;">
              <button tabindex="-1" type="button" class="callsign-text btn btn-sm btn-outline-secondary full-btn to-btn">{{callsign}}</button>
            </td>
            <td style="width: 4rem;">
              <button tabindex="-1" type="button" class="btn btn-sm btn-outline-secondary full-btn to-btn">KGS</button>
            </td>
          </tr>
          <tr>
            <td><strong>From</strong></td>
            <td><input type="text" name="from" list="callsign-options" class="form-control form-control-sm"></td>
            <td style="width: 4rem;">
              <button tabindex="-1" type="button" class="callsign-text btn btn-sm btn-outline-secondary full-btn from-btn">{{callsign}}</button>
            </td>
          </tr>
        </table>
        <h4 class="pt-4">
          <strong>{{transmission.transmission}}</strong>
        </h4>
        <table class="column-gap row-gap w-100">
          <thead class="grey-row">
            <th style="width: 4rem">Serial</th>
            <th style="width: 20rem">Value</th>
            <th>Description</th>
          </thead>
          {{#each transmission.serials}}
            <tr>
              <td><strong>{{serial}}</strong></td>
              <td>
                {{#ifEquals type 'short'}}
                  <input type="text" name="{{serial}}" class="form-control form-control-sm">
                {{/ifEquals}}
                {{#ifEquals type 'long'}}
                  <textarea style="resize:none" class="form-control form-control-sm" name="{{serial}}" rows="3"></textarea>
                {{/ifEquals}}
                {{#ifEquals type 'loc'}}
                  <input type="text" name="{{serial}}" list="location-options" class="form-control form-control-sm">
                {{/ifEquals}}
                {{#ifEquals type 'option'}}
                  {{#each options}}
                    <div class="form-check">
                      <input class="form-check-input" type="radio" name="{{../serial}}" value="{{this}}" id="{{this}}-radio">
                      <label class="form-check-label" for="{{this}}-radio">
                        {{this}}
                      </label>
                    </div>
                  {{/each}}
                {{/ifEquals}}
              </td>
              <td>{{description}}</td>
            </tr>
          {{/each}}
        </table>
        <div class="m-3 footer border-top">
          <div class="d-flex mt-3 pull-right">
            <button class="me-auto btn btn-sm btn-outline-secondary mx-1" id="print-previous" type="button">Print Previous</button>
            <div class="form-check mx-1" style="padding-top: 0.1rem;">
              <input class="form-check-input" type="checkbox" name="print" id="print-check-box">
              <label class="form-check-label" style="font-size: 0.875rem" for="print-check-box">
                Print
              </label>
            </div>
            <button class="btn btn-sm btn-outline-secondary mx-1" type="submit">Record</button>
            <button class="btn btn-sm btn-outline-secondary mx-1" type="reset">Cancel</button>
          </div>
        </div>
      </form>
    </div>

    <div id="modal-form" class="modal" tabindex="-1">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 id="modal-title" class="modal-title">title</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <form name="settings" action="../update_settings">
            <div class="modal-body">
              <div class="input-group mb-3">
                <input id="modal-input" type="text" class="form-control" name="" placeholder="" required/>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
              <button type="submit" class="btn btn-primary">Update</button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <datalist id="location-options">
      {{#each locations}}
        <option value="{{this}}">
      {{/each}}
    </datalist>
    <datalist id="callsign-options">
      {{#each callsigns}}
        <option value="{{this}}">
      {{/each}}
    </datalist>
    <iframe style="dispaly: none" src="/log/{{prevId}}" id="prev-return" hidden></iframe>
    <script src="/assets/js/helpers.js"></script>
    <script src="/assets/js/transmission.js"></script>
    <script src="/assets/bootstrap/js/bootstrap.js"></script>
  </body>
</html>